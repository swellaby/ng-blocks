{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "playground/**/*.ts"
    ]
}